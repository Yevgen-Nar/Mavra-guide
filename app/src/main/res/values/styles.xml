<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Settings_normal_text_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Settings_small_text_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Settings_strip_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDarkGray</item>
    </style>

    <style name="Settings_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/margin_start</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="minHeight">48dp</item>

    </style>

    <style name="Settings_small_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="setting_circle_image_view_camera">
        <item name="android:layout_width">@dimen/settings_camera_photo_width</item>
        <item name="android:layout_height">@dimen/settings_camera_photo_height</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
    </style>

    <style name="settings_circle_image_view_icon_user_photo">
        <item name="android:layout_width">@dimen/settings_user_photo_width</item>
        <item name="android:layout_height">@dimen/settings_user_photo_height</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
    </style>

    <style name="enter_code_edit_text_input_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColorHint">@color/colorDarkGray</item>
        <item name="android:inputType">phone</item>
        <item name="android:layout_margin">@dimen/margin_total_16dp</item>
        <item name="android:padding">@dimen/padding_total_edit_text_5dp</item>
    </style>
</resources>